{
    "name": "@mimosa/core",
    "version": "0.0.0",
    "scripts": {
        "clean": "rm -rf lib",
        "check": "tsc --noEmit",
        "build": "yarn clean && tsc -b -v",
        "lint": "eslint {src,test}/**/*.{ts,tsx} --cache --fix",
        "test": "jest --runInBand",
        "postpack": "run clean",
        "prepack": "run build"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "exports": {
        ".": "./lib/index.js",
        "./decorators": "./lib/decorators/index.js",
        "./decorators/*": "./lib/decorators/*.js",
        "./*": "./lib/*"
    },
    "files": [
        "lib"
    ],
    "devDependencies": {
        "@types/jest": "^29.4.0",
        "@types/node": "^18.13.0",
        "eslint": "^8.39.0",
        "jest": "^29.5.0",
        "jest-extended": "^3.2.0",
        "ts-jest": "^29.1.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@mimosa/injection": "workspace:^",
        "@mimosa/method-interceptor": "workspace:^",
        "is-plain-object": "^5.0.0",
        "lru-cache": "^9.0.1",
        "path-to-regexp": "^6.2.1",
        "reflect-metadata": "^0.1.13",
        "type-fest": "^3.6.1"
    }
}
